                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="todo-list">
                        <% for(let i of todo_list) {%>
                            <tr>
                                <td>
                                    <%= i.id %>
                                </td>
                                <td>
                                    <%= i.description %>
                                </td>
                                <td>
                                    <%= i.category %>
                                </td>
                                <td>
                                    <%= i.date %>
                                </td>

                                <td>
                                    <a href="/edit-todo/?id=<%= i.id%>" class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="/delete-todo/<%= i.id%>" class="btn btn-danger btn-sm delete">Delete</a>
                                </td>

                            </tr>
                            <%}%>
                    </tbody>
                </table>


            </div>
        </div>
    </div>



