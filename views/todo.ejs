<body>

    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-5">
                TODO App
            </h1>
        </div>
        <div class="main row justify-content-center">
            <form action="/create-todo" method="post" id="todo-form" class="row justify-content-center mb-4" autocomplete="off">
                <div class="col-10 mb-3">
                    <label for="description">Description</label>
                    <input id="description" class="form-control" name="description" type="text" placeholder="what do you need to do?">
                </div>
                <div class="col-5 mb-3">
                    <label for="category">Category</label>
                    <select name="category" id="category" placeholder="choose a category">
                        <option value="personal">Personal</option>
                        <option value="work">Work</option>
                        <option value="school">School</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="col-5 mb-3">
                    <label for="date">Due Date</label>
                    <input type="date" name="date" id="date">
                </div>
                <div class="col-10">
                    <input type="submit" class="btn btn-success add-btn" value="Submit">
                </div>
            </form>
            <div class="col-10 mt-5">

